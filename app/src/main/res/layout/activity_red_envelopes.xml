<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_bg_red" />

            <RelativeLayout
                android:id="@+id/relate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="260dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shape_red"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/line_top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_bg_red"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingStart="15dp"
                        android:paddingTop="15dp"
                        android:paddingEnd="15dp"
                        android:text="具体规则：邀请用户在注册完成7天内累计充值≥300元算一个有效用户数，累计达到以下对应人数则奖励相应的金币。"
                        android:textColor="@color/gray_666666"
                        android:textSize="14sp" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="40dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tv"
                    android:layout_marginTop="-42dp"
                    android:background="@drawable/shape_bg_red"
                    android:orientation="horizontal"
                    android:paddingTop="50dp"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="累积邀请（人数）"
                            android:textColor="@color/gray_666666"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/retain_friend_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/zero"
                            android:textColor="#FD4042"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:background="#F2C4C7" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="累积奖励（金币）"
                            android:textColor="@color/gray_666666"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/retain_gold_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/zero"
                            android:textColor="#FD4042"
                            android:textSize="18sp" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line_top"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-5dp"
                    android:background="@drawable/ic_bg_wz"
                    android:gravity="center_horizontal"
                    android:paddingTop="12dp"
                    android:text="我的邀请"
                    android:textColor="#BD010C"
                    android:textSize="18sp" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relate"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="此数据只统计当前奖励数据，并非所有邀请奖励。"
                android:textColor="@color/gray_999999"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="245dp"
                android:background="@drawable/ic_bg_wz"
                android:gravity="center_horizontal"
                android:paddingTop="12dp"
                android:text="额外大奖"
                android:textColor="#BD010C"
                android:textSize="18sp" />

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <ImageView
        android:id="@+id/finish_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:src="@drawable/back_white" />

    <ImageView
        android:id="@+id/btn_invitation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="35dp"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="35dp"
        android:adjustViewBounds="true"
        android:src="@drawable/invite_btn_icon" />

</FrameLayout>