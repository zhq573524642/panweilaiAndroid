<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp">

    <ImageView
        android:id="@+id/head_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/default_head" />

    <TextView
        android:id="@+id/nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/head_iv"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/head_iv"
        android:text="星辰大海"
        android:textColor="@color/black_333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/online_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/head_iv"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/head_iv"
        android:background="@drawable/corner_solid_green"
        android:paddingStart="9dp"
        android:paddingTop="1dp"
        android:paddingEnd="9dp"
        android:paddingBottom="1dp"
        android:text="在线"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/invite_btn"
        android:layout_width="60dp"
        android:layout_height="26dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:background="@drawable/corner_solid_red"
        android:gravity="center"
        android:text="邀请"
        android:textColor="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/head_iv"
        android:layout_marginTop="15dp"
        android:background="#DDDDDD" />

</RelativeLayout>