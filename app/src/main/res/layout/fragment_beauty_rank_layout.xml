                    <TextView
                        android:id="@+id/one_reward_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/corner_purple"
                        android:gravity="center"
                        android:paddingStart="6dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="6dp"
                        android:paddingBottom="2dp"
                        android:text="未领取"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:visibility="invisible" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/one_head_iv"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_rank2"
                        android:contentDescription="@null"
                        android:padding="2dp" />

                    <ImageView
                        android:layout_width="29dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/rank_one"
                        android:contentDescription="@null" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/rank_one1" />

                </FrameLayout>

            </FrameLayout>

            <!--第三名-->
            <FrameLayout
                android:id="@+id/three_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/rank_top_bg"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical"
                    android:paddingTop="40dp">

                    <TextView
                        android:id="@+id/three_nick_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:textColor="@color/black_333333"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/three_chat_number_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/gray_868686"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/three_gold_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableStart="@drawable/rank_hot"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:textColor="@color/red_fe2947"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/three_reward_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/corner_purple"
                        android:gravity="center"
                        android:paddingStart="6dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="6dp"
                        android:paddingBottom="2dp"
                        android:text="未领取"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:visibility="invisible" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/three_head_iv"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_rank3"
                        android:contentDescription="@null"
                        android:padding="2dp" />

                    <ImageView
                        android:layout_width="29dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/rank_three"
                        android:contentDescription="@null" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/rank_three3" />

                </FrameLayout>

            </FrameLayout>

        </LinearLayout>

        <!--上方筛选-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-3dp"
            android:orientation="horizontal">

            <!--日榜-->
            <TextView
                android:id="@+id/day_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:drawableBottom="@drawable/selector_rank_choose_image_background"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:text="@string/day_rank"
                android:textColor="@drawable/selector_rank_choose_text_color"
                android:textSize="16sp" />

            <!--周榜-->
            <TextView
                android:id="@+id/week_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:drawableBottom="@drawable/selector_rank_choose_image_background"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:text="@string/week_rank"
                android:textColor="@drawable/selector_rank_choose_text_color"
                android:textSize="16sp" />

            <!--月榜-->
            <TextView
                android:id="@+id/month_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:drawableBottom="@drawable/selector_rank_choose_image_background"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:text="@string/month_rank"
                android:textColor="@drawable/selector_rank_choose_text_color"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

