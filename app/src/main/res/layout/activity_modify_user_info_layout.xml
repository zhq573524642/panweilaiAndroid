<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/upload_iv"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/upload_cover"
                android:contentDescription="@null" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/evidence_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:text="注：必须上传本人清晰正面照，衣着不得过分暴露（如漏乳沟、肉色吊带、露肩装、露背装等）不得有故意搞怪表情（如吐舌头、诱惑等）不得用手机遮挡面部，否则不予通过。"
            android:textColor="#ffef1231"
            android:textSize="11sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/gray_e1e1e1" />

        <!--昵称-->
        <RelativeLayout
            android:id="@+id/nick_rl"
            android:layout_width="match_parent"
            android:layout_height="58dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:text="@string/nick"
                android:textColor="@color/black_333333"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nick_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="end"
                    android:hint="@string/please_input_nick"
                    android:lines="1"
                    android:maxLength="10"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="3dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black_333333"
                    android:textColorHint="@color/gray_right_text"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/icon_right_arrow"
                    android:contentDescription="@null" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="14dp"
            android:background="@color/gray_e1e1e1" />

        <!--年龄-->
        <RelativeLayout
            android:id="@+id/age_rl"
            android:layout_width="match_parent"
            android:layout_height="58dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:text="@string/modify_age"
                android:textColor="@color/black_333333"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/age_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:clickable="false"
                    android:gravity="end"
                    android:hint="@string/modify_age_des"
                    android:paddingStart="10dp"
                    android:paddingEnd="3dp"
                    android:text="@string/eighteen"
                    android:textColor="@color/black_333333"
                    android:textColorHint="@color/gray_right_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:clickable="false"
                    android:gravity="end"
                    android:text="@string/age_des"
                    android:textColor="@color/black_333333"
                    android:textColorHint="@color/gray_right_text"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/icon_right_arrow"
                    android:contentDescription="@null" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="14dp"
            android:background="@color/gray_e1e1e1" />

        <!--身高-->
        <RelativeLayout
            android:id="@+id/high_rl"
            android:layout_width="match_parent"
            android:layout_height="58dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:text="@string/height"
                android:textColor="@color/black_333333"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/high_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:enabled="false"
                    android:gravity="end"
                    android:hint="@string/please_input_height"
                    android:paddingStart="10dp"
                    android:paddingEnd="3dp"
                    android:text="@string/one_hundred_and_sixty"
                    android:textColor="@color/black_333333"
                    android:textColorHint="@color/gray_right_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:clickable="false"
                    android:gravity="end"
                    android:text="@string/high_des"
                    android:textColor="@color/black_333333"
                    android:textColorHint="@color/gray_right_text"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/icon_right_arrow"
                    android:contentDescription="@null" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="14dp"
            android:background="@color/gray_e1e1e1" />

        <!--体重-->
        <RelativeLayout
            android:id="@+id/body_rl"
            android:layout_width="match_parent"
            android:layout_height="58dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:text="@string/weight"
                android:textColor="@color/black_333333"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/body_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:enabled="false"
                    android:gravity="end"
                    android:hint="@string/please_input_weight"
                    android:paddingStart="10dp"
                    android:paddingEnd="3dp"
                    android:text="@string/fourty_kg"
                    android:textColor="@color/black_333333"
                    android:textColorHint="@color/gray_right_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:clickable="false"
                    android:gravity="end"
                    android:text="@string/body_des"
                    android:textColor="@color/black_333333"
                    android:textColorHint="@color/gray_right_text"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/icon_right_arrow"
                    android:contentDescription="@null" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="14dp"
            android:background="@color/gray_e1e1e1" />

        <!--婚姻状态-->
        <RelativeLayout
            android:id="@+id/marriage_rl"
            android:layout_width="match_parent"
            android:layout_height="58dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:text="@string/marriage"
                android:textColor="@color/black_333333"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/marriage_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:enabled="false"
                    android:gravity="end"
                    android:hint="@string/please_input_star"
                    android:paddingStart="10dp"
                    android:paddingEnd="3dp"
                    android:text="保密"
                    android:textColor="@color/black_333333"
                    android:textColorHint="@color/gray_right_text"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:background="@drawable/icon_right_arrow"
                    android:contentDescription="@null" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="14dp"
            android:background="@color/gray_e1e1e1" />

        <!--职业-->
        <RelativeLayout
            android:id="@+id/job_ll"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:text="@string/job"
                android:textColor="@color/black_333333"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/job_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:enabled="false"
                    android:gravity="end"
                    android:hint="@string/please_input_job"
                    android:paddingStart="10dp"
                    android:paddingEnd="3dp"
                    android:text="@string/model"
                    android:textColor="@color/black_333333"
                    android:textColorHint="@color/gray_right_text"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/icon_right_arrow"
                    android:contentDescription="@null" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="14dp"
            android:background="@color/gray_e1e1e1" />

        <!--城市-->
        <RelativeLayout
            android:id="@+id/city_rl"
            android:layout_width="match_parent"
            android:layout_height="58dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:text="@string/city"
                android:textColor="@color/black_333333"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/city_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="end"
                    android:hint="@string/please_input_city"
                    android:paddingStart="10dp"
                    android:paddingEnd="3dp"
                    android:textColor="@color/black_333333"
                    android:textColorHint="@color/gray_right_text"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:background="@drawable/icon_right_arrow"
                    android:contentDescription="@null" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="14dp"
            android:background="@color/gray_e1e1e1" />

        <EditText
            android:id="@+id/sign_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="14dp"
            android:background="@color/transparent"
            android:gravity="top|start"
            android:hint="写下你的个性签名"
            android:lines="4"
            android:maxLength="50"
            android:textColor="@color/black_333333"
            android:textColorHint="#ff898989"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/submit_tv"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/corner_gradient_blue_pink"
            android:gravity="center"
            android:text="@string/submit_verify"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>