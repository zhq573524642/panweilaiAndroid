<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:background="@drawable/corner5_solid_white"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="创建房间"
        android:textColor="@color/black_333333"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:text="选择房间类型"
        android:textColor="@color/black_333333"
        android:textSize="14sp"
        android:visibility="gone" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/video_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableBottom="@drawable/radio16_3_corner_main_tranparent"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="视频房间"
            android:textColor="@color/color_radio_black33_gray86"
            android:textSize="15sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/radio16_3_corner_main_tranparent"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="语音房间"
            android:textColor="@color/color_radio_black33_gray86"
            android:textSize="15sp" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="14dp"
        android:text="请输入房间名称"
        android:textColor="@color/black_333333"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner4_solid_gray"
        android:hint="请输入房间名称"
        android:maxLength="20"
        android:maxLines="1"
        android:padding="10dp"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:background="@drawable/corner_gray_f2f3f7"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/black_333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/confirm_btn"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginStart="52dp"
            android:background="@drawable/corner_solid_main"
            android:gravity="center"
            android:text="创建"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>