<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <com.pili.pldroid.player.widget.PLVideoTextureView
        android:id="@+id/plv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/complain_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@null"
        android:focusable="true"
        android:padding="5dp"
        android:src="@drawable/anchor_data_more" />

    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@null"
        android:padding="6dp"
        android:src="@drawable/icon_back_white" />


    <!--        android:background="@drawable/shape_cover_one_background"-->
    <LinearLayout
        android:id="@+id/bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingTop="30dp"
        android:paddingRight="12dp"
        android:paddingBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/head_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_white"
                android:padding="2dp"
                android:src="@drawable/default_head_img" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/head_iv"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/head_iv"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nick_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="200dp"
                    android:maxLines="1"
                    android:text="名称"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/online_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/shape_free_indicator"
                    android:drawablePadding="5dp"
                    android:text="在线"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/age_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/head_iv"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="1dp"
                android:layout_toRightOf="@+id/head_iv"
                android:text="18岁"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/up_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/video_slide_top" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_chat_btn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/corner6_solid_15black"
                android:drawableTop="@drawable/video_chat_text"
                android:drawablePadding="7dp"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="7dp"
                android:text="私信"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/video_chat_btn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/corner6_solid_15black"
                android:drawableTop="@drawable/video_chat_video"
                android:drawablePadding="7dp"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="7dp"
                android:text="视频"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/audio_chat_btn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/corner6_solid_15black"
                android:drawableTop="@drawable/video_chat_audio"
                android:drawablePadding="7dp"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="7dp"
                android:visibility="gone"
                android:text="语音"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:visibility="gone"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/send_gift_btn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/corner6_solid_15black"
                android:drawableTop="@drawable/video_chat_gift"
                android:drawablePadding="7dp"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="7dp"
                android:text="礼物"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/follow_tv"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/corner6_solid_15black"
                android:drawableTop="@drawable/video_follow_actor_unselected"
                android:drawablePadding="7dp"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="7dp"
                android:text="关注"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>